{
  "name": "digitalsight-financials",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:worker": "wrangler dev --remote",
    "build": "vite build",
    "deploy": "vite build && wrangler deploy",
    "preview": "vite build && wrangler dev",
    "db:migrate:local": "wrangler d1 execute digitalsight-db --local --file=migrations/0001_init.sql",
    "db:migrate:remote": "wrangler d1 execute digitalsight-db --remote --file=migrations/0001_init.sql",
    "clean": "rm -rf dist .wrangler",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@tremor/react": "^3.18.7",
    "@vitejs/plugin-react": "^5.0.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.11.10",
    "lucide-react": "^0.546.0",
    "motion": "^12.23.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.14.0",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.8.2",
    "vite": "^5.4.10",
    "wrangler": "^4.67.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.1"
  }
}
